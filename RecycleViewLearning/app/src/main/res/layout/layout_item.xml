<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12pt"
        android:paddingHorizontal="6pt"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="35dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageFilm"
                android:layout_width="200dp"
                android:layout_height="135dp"
                app:srcCompat="@drawable/pick" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFilmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#20f"
            android:text="Tên Phim" />

        <TextView
            android:id="@+id/txtFilmSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Miêu tả" />
    </LinearLayout>

</LinearLayout>